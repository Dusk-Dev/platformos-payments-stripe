---
name: create_account
to: https://api.stripe.com/v1/accounts{% if data.gateway_id != blank%}/{{ data.gateway_id }}{% endif %}
enabled: true
format: https
trigger_condition: true
request_type: Post
callback: >
  {%- assign response_data = response.body | to_hash -%}
  {% if response_data.error %}
    {%- log response_data.error, type: 'modules/payments/create_account' -%}
  {% endif %}
headers: >
  {% if data %}
  {% log data, type: "DEBUG data header" %}
    {%- include 'modules/stripe/shared/api_credentials' -%}
    {
      "Content-Type": "application/x-www-form-urlencoded",
      "Authorization": "Bearer {{ context.exports.payments.gateway.secret_key }}",
      "Stripe-Version": "2019-08-14",
      "Idempotency-Key": "{{ data.indempotency_key }}"
    }
  {% endif %}
---
{%- assign allowed_params = 'email,account_token,external_account,business_profile,settings,metadata,requested_capabilities,default_currency' | split: ',' -%}
{%- assign request_params = '' | split: "|" -%}
{%- for var in data -%}
  {%- if var[1] != blank -%}
    {%- if allowed_params contains var[0] -%}
      {%- parse_json "query" -%}{ }{%- endparse_json -%}
      {%- assign query = query | add_hash_key: var[0], var[1] | querify -%}
      {%- assign request_params = request_params | add_to_array: query -%}
    {%- endif -%}
  {%- endif -%}
{%- endfor -%}
{% if data.gateway_id == blank %}country={{ data.country }}&type=custom&tos_acceptance[ip]={{ data.ip }}&tos_acceptance[date]={{ 'now' | date: '%s' }}&{% endif %}{{ request_params | join: '&' | html_safe }}

---
name: account_login_link
to: https://api.stripe.com/v1/accounts/{{ data.gateway_id }}/login_links
enabled: true
format: https
trigger_condition: true
request_type: Post
callback: >
  {%- assign response_data = response.body | to_hash -%}
  {% if response_data.error %}
    {%- log response_data.error, type: 'modules/payments/account_login_link' -%}
  {% endif %}
headers: >
  {%- include 'modules/stripe/shared/api_credentials' -%}
  {
    "Content-Type": "application/x-www-form-urlencoded",
    "Authorization": "Bearer {{ context.exports.payments.gateway.secret_key }}",
    "Stripe-Version": "2019-08-14"
  }
---

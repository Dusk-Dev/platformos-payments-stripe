---
name: create_subscription
to: https://api.stripe.com/v1/subscriptions
enabled: true
format: https
trigger_condition: true
request_type: Post
callback: >
  {%- assign response_data = response.body | to_hash -%}
  {%log response_data, type: "response data"%}
  {% if response_data.error %}
    {%- log response_data.error, type: 'modules/payments/create_subscription' -%}
  {% endif %}
headers: >
  {% if data %}
    {%- include 'modules/stripe/shared/api_credentials' -%}
    {
      "Content-Type": "application/x-www-form-urlencoded",
      "Authorization": "Bearer {{ context.exports.payments.gateway.secret_key }}",
      "Idempotency-Key": "{{ data.indempotency_key }}"
    }
  {% endif %}
---
{% log data, type: "data" %}
customer={{ data.customer_id }}&items[0][price]={{ data.price_id }}&default_payment_method={{ data.default_payment_method  }}&currency={{ data.currency }}
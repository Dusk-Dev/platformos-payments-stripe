---
name: create_account
to: https://api.stripe.com/v1/accounts/{{ data.gateway_id }}
enabled: true
format: https
trigger_condition: true
request_type: Post
callback: >
  {%- assign response_data = response.body | to_hash -%}
  {% if response_data.error %}
    {%- log response_data.error, type: 'modules/payments/create_account' -%}
  {% endif %}
headers: >
  {% if data %}
    {%- include 'modules/stripe/shared/api_credentials' -%}
    {
      "Content-Type": "application/x-www-form-urlencoded",
      "Authorization": "Bearer {{ context.exports.payments.gateway.secret_key }}"
    }
  {% endif %}
---
{% if data.gateway_id %}
  {%- assign allowed_params = 'email,account_token,external_account' | split: ',' -%}
{% else %}
  {%- assign allowed_params = 'email,country,account_token,external_account' | split: ',' -%}
{% endif %}
{%- assign request_params = '' | split: "|" -%}
{%- for var in data -%}
  {%- if var[1] != blank -%}
    {% if allowed_params contains var[0] %}
      {%- capture pair %}{{ var[0] }}={{ var[1] | url_encode }}{% endcapture -%}
      {%- assign request_params = request_params | add_to_array: pair -%}
    {%- endif -%}
  {%- endif -%}
{%- endfor -%}
{% log request_params, type: "account request params!!!" %}
{% unless data.gateway_id %}type=custom&{% endunless %}{{ request_params | join: '&' | html_safe }}
